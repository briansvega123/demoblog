{% extends "base.twig" %}
{% block content %}
<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12 ">
			<div class="header">Test Site</div>
		</div>
		<div class="col-lg-9 ">
			{% for post in posts %}
			<h2>{{ post.title }}</h2>
		<div>{{ post.post }}</div>
		<div>{{ post.created }}</div>
			{% endfor %} 
		</div>
		<div class="col-lg-offset-9">

				<h2>5 Recent posts</h2>
				<div class="rec">
					{% for y in rpost %}
					<li><a href="/post/{{ y.id }}{{ post.title }}">{{ y.title }}</a></li>
				<div>{{ y.created }}</div>
					{% endfor %}
				</div>
				<h2>Archives</h2>
				<div class="rec">
					<li>Last 12 months with number of posts:</li>
					{% for x in apost %}
					<li><a href="/archive/{{ x.year }}/{{ x.month }}">{{ x.year }}-{{ x.month }} ({{ x.count }})</a></li>
					{% endfor %}
				</div>
		</div>
	</div>
</div>
{% endblock %}